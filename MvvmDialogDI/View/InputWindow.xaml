<Window x:Class="MvvmDialogDI.View.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmDialogDI.View"
        mc:Ignorable="d"
        Title="InputWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>
        <Label Content="Type here" Grid.Row="0"/>
        <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1"/>

    </Grid>
</Window>
